---
import '../styles/global.css';
import HtmlHead from '../components/HtmlHead.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<HtmlHead title={title} />
	<body class="min-h-screen bg-background text-primary">
		<slot />
	</body>
</html>