import Layout from '../layouts/Layout.astro';
---

<Layout title="Best Friends | Anton Sten – UX Lead & Product Designer" description="Subscription confirmed. You're now part of my newsletter community.">
    <div class="min-h-screen bg-white">
        <div class="max-w-[700px] mx-auto px-8 sm:px-6 mt-[20vh]">
            <div class="-mx-8 sm:mx-0 mb-16">
                <img src="/images/did-we-just-become-best-friends-yep.gif" alt="Did we just become best friends? Yep!" class="w-full" />
            </div>
            
            <h1 class="text-black font-medium text-[48px] leading-[1.2] tracking-[-0.02em] sm:text-display mb-8">We're all set.</h1>
            
            <p class="body-xxl mb-24">
                Thanks for confirming your subscription.
                <br /><br />
                You'll start getting ideas about design, creativity, and building better things—straight to your inbox.
                <br /><br />
                First email's already on the way. If you don't see it soon, check your spam or promotions folder. (Or just <a href="mailto:anton@antonsten.com" class="text-black underline hover:text-green">email me</a>.)   
            </p>
        </div>
    </div>
</Layout> 