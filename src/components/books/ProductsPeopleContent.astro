      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 32px;
    }
  }

  .learning-list {
    list-style: disc;
    list-style-position: outside;
    padding-left: 24px;
    margin: 0;
    display: grid;
    gap: 16px;
  }

    padding: 32px;
    display: grid;
