  }

  .pricing-price {
    font-size: 2.25rem;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .pricing-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 12px;
  }

  .pricing-cta {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 12px 24px;
    border-radius: 8px;
    background-color: rgb(var(--color-accent));
    color: #ffffff;
    font-weight: 600;
    transition: opacity 150ms ease;
    text-align: center;
  }

