---
import CalloutSection from './CalloutSection.astro';
import Button from './ui/Button.astro';

interface Props {
	success?: boolean;
	heading?: string;
}

const {
	success = false,
	heading = 'Get design insights, case studies, and lessons learned in your inboxâ€”join 3,000+ designers and product people.'
} = Astro.props as Props;
---

<CalloutSection
	title="Newsletter"
	background="#111111"
	titleColor="#d1e8bd"
	contentColor="#d1e8bd"
	className="newsletter-wrapper"
>
	<div class="newsletter-content">
		<p class="newsletter-copy body-lg">{heading}</p>
		<div id="form-container">
			<form
				class="newsletter-form"
				id="newsletter-form"
				autocomplete="off"
			>
				<input
					class="newsletter-input"
					name="email_address"
					aria-label="Email address"
					placeholder="Enter your email"
					required
					type="email"
					id="email-input"
				>
				<Button
					type="submit"
					id="submit-button"
					variant="ghost"
					className="newsletter-button"
				>
					<span class="button-text">Sign up</span>
					<span class="button-loading hidden">
						<svg class="animate-spin -ml-1 mr-2 h-5 w-5 text-white inline-block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
							<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
							<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
						</svg>
						Subscribing...
					</span>
				</Button>
			</form>
			<div id="form-message" class="newsletter-message hidden"></div>
		</div>
	</div>
</CalloutSection>

<style>
	.newsletter-content {
		display: grid;
		gap: 24px;
	}

	.newsletter-copy {
		margin: 0;
		color: #d1e8bd;
	}

	.newsletter-form {
		display: flex;
		gap: 12px;
		align-items: center;
	}

	.newsletter-input {
		flex: 1 1 auto;
		min-width: 0;
		padding: 14px 20px;
		border-radius: 4px;
		border: 1px solid rgba(255, 255, 255, 0.3);
		background: #ffffff;
		color: #1b1b1b;
		font-size: 1rem;
	}

	.newsletter-input::placeholder {
		color: rgba(107, 114, 128, 0.8);
	}

	.newsletter-input:focus {
		outline: 2px solid rgba(0, 163, 92, 0.45);
		outline-offset: 2px;
	}

	.newsletter-button {
		white-space: nowrap;
		background-color: rgb(var(--color-accent-soft));
		color: rgb(var(--color-text));
		padding-left: 24px;
		padding-right: 24px;
	}

	.newsletter-button:hover {
		opacity: 0.9;
	}

	.newsletter-message {
		margin-top: 12px;
		font-size: 0.875rem;
		color: #d1e8bd;
	}

	@media (max-width: 900px) {
		.newsletter-form {
			flex-direction: column;
			align-items: stretch;
		}

		.newsletter-button {
			width: 100%;
		}
	}
</style>

<script>
if (typeof window !== 'undefined') {
    const form = document.getElementById('newsletter-form') as HTMLFormElement | null;
    const submitButton = document.getElementById('submit-button') as HTMLButtonElement | null;
    const buttonText = submitButton?.querySelector('.button-text') as HTMLElement | null;
    const buttonLoading = submitButton?.querySelector('.button-loading') as HTMLElement | null;
    const formMessage = document.getElementById('form-message') as HTMLDivElement | null;
    const emailInput = document.getElementById('email-input') as HTMLInputElement | null;
    
    let isSubmitting = false;
    let submissionTimeout: number;

    if (form && submitButton && buttonText && buttonLoading && formMessage && emailInput) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            if (isSubmitting) return;
            isSubmitting = true;
            
            // Show loading state
            submitButton!.disabled = true;
            buttonText!.classList.add('hidden');
            buttonLoading!.classList.remove('hidden');
            formMessage.classList.add('hidden');

            // Set a timeout for user feedback
            submissionTimeout = window.setTimeout(() => {
                resetForm();
                showMessage('Subscription is taking longer than expected. Please check your email for confirmation.', 'warning');
            }, 8000);

            try {
                const formData = new FormData(form);
                
                const response = await fetch('https://app.kit.com/forms/7820469/subscriptions', {
                    method: 'POST',
                    body: formData,
                    mode: 'no-cors'
                });

                clearTimeout(submissionTimeout);

                // Since we're using no-cors, we can't read the response
                // But if no error is thrown, assume success
                
                // Track successful newsletter signup in Fathom
                if (typeof (window as any).fathom !== 'undefined') {
                    (window as any).fathom.trackEvent('Newsletter Signup');
                }
                
                showMessage('Thanks for subscribing! You\'ll receive a confirmation email shortly.', 'success');
                emailInput.value = '';
                resetForm();

            } catch (error) {
                clearTimeout(submissionTimeout);
                console.error('Form submission error:', error);
                showMessage('Failed to subscribe to the newsletter. Please try again.', 'error');
                resetForm();
            }
        });

        function resetForm() {
            isSubmitting = false;
            submitButton!.disabled = false;
            buttonText!.classList.remove('hidden');
            buttonLoading!.classList.add('hidden');
        }

        /**
         * Show a message in the form message area.
         * @param {string} message
         * @param {'success' | 'error' | 'warning'} type
         */
        function showMessage(message: string, type: 'success' | 'error' | 'warning') {
            if (!formMessage) return;
            formMessage.textContent = message;
            formMessage.classList.remove('hidden');
            formMessage.classList.remove('message-success', 'message-error', 'message-warning');
            if (type === 'success') {
                formMessage.classList.add('message-success');
            } else if (type === 'error') {
                formMessage.classList.add('message-error');
            } else if (type === 'warning') {
                formMessage.classList.add('message-warning');
            }
        }

        submitButton.addEventListener('click', (e) => {
            if (isSubmitting) {
                e.preventDefault();
                e.stopPropagation();
            }
        });
    }
}
</script>

<style is:global>
    .newsletter-message.message-success {
        color: #8ad5a8;
    }

    .newsletter-message.message-error {
        color: #ffb3b3;
    }

    .newsletter-message.message-warning {
        color: #ffe08a;
    }
</style> 